@model SignUpForm.Models.ViewModel.SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-primary rounded">
            <div class="text-center">
                <h1 class="text-info">User Registration Form</h1>
            </div>
            <form method="post" asp-action="SignUp">
                <div class="form-group">
                      <label asp-for="username"></label>
                      <input type="text" asp-for="username" class="form-control" autocomplete="off" />
                </div>

                <div class="form-group">
                    <label asp-for="email"></label>
                    <input type="text" asp-for="email" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label asp-for="password"></label>
                    <input type="text" asp-for="password" class="form-control" autocomplete="off" />
                </div>
                @*<div class="form-group">
                    <label asp-for="confirmpassword"></label>
                    <input type="text" asp-for="confirmpassword" class="form-control" autocomplete="off" />
                </div>
*@
                <div class="form-group">
                    <input type="submit" class="btn btn-success btn-lg mb-1 float-right" value="Registration" />

                </div>
            </form>

        </div>
    </div>

</div>
